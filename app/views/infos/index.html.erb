 <p class="new user"><%= link_to "新規登録", :new_info, class: 'btn btn-border-shadow btn-border-shadow--color2' %></p>
  <div class="header-title">顧客一覧表
    <div class="serach">
      <%= search_form_for @q do |f| %>
        <%= f.search_field :name_or_telnum_or_address_cont ,placeholder: "名前・電話、住所検索"%>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
    <table>
      <thead>
        <tr>
          <th>名前<br>(クリックで詳細確認)</th>
          <th>住所</th>
          <th>電話<br>(クリックで通話可能)</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% @infos.each do |info|%>
          <tr>
            <td><%= link_to(info.name,"/infos/#{info.id}", class:"telcolor")%>様</td>
            <td><%= info.address %></td>
            <td><a href="tel:<%= info.telnum %>" class="telcolor"><%= info.telnum %></a></td>
            <td><%= link_to "削除", info, method: :delete, data:{confirm:"本当に削除しますか？"}%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   <%= paginate @infos %>