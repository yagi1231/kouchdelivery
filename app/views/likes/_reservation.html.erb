<% if current_user.liked_by?(reservation.id) %>
  <%= link_to destroy_like_path(reservation), class: "like-link", method: :DELETE, remote: true do %><%= reservation.likes.count %>
    <i class="fa fa-bicycle unlike-btn"></i>
  <% end %>
<% else %>
  <%= link_to create_like_path(reservation), class: "like-link", method: :POST, remote: true do %><%= reservation.likes.count %>
    <i class="fa fa-bicycle like-btn"></i>
  <% end %>
<% end %>